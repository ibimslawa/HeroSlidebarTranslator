<UserControl x:Class="HeroSlidebarTranslator.LinkLabel"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
       xmlns:local="clr-namespace:HeroSlidebarTranslator"
       mc:Ignorable="d" 
       d:DesignHeight="24" d:DesignWidth="64"
       x:Name="_linkLabel">
	<UserControl.Template>
		<ControlTemplate>
			<TextBlock x:Name="TextboxLinklabel" Text="{Binding Path=(local:LinkLabel.Content), RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:LinkLabel}}}" 
				   TextDecorations="Underline" Foreground="{StaticResource AccentLightBrush}" HorizontalAlignment="Stretch" VerticalAlignment="Center" 
				   Cursor="Hand" ForceCursor="True"/>
		</ControlTemplate>
	</UserControl.Template>
</UserControl>
